{
  "name": "reim-dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IniZio/reim.git"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "link": "lerna exec yarn link",
    "lint": "xo --fix",
    "dev": "yarn watch",
    "build": "NODE_ENV=production rollup -c",
    "watch": "rollup -w -c",
    "test": "NODE_ENV=test jest --testURL=http://localhost",
    "test:watch": "yarn test --watchAll",
    "test:ci": "yarn test --coverage && cat ./coverage/lcov.info | codacy-coverage",
    "prerelease": "yarn build",
    "release": "lerna publish --conventional-commits",
    "release:preview": "lerna publish --skip-git --skip-npm --conventional-commits"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn lint"
    ]
  },
  "xo": {
    "parser": "babel-eslint",
    "extends": "xo-react",
    "semicolon": false,
    "esnext": true,
    "space": 2,
    "envs": [
      "node",
      "browser",
      "es6",
      "serviceworker"
    ],
    "globals": [
      "jest",
      "test",
      "expect",
      "describe"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "capitalized-comments": 0,
      "quote-props": [
        "warn",
        "consistent"
      ],
      "react/button-has-type": 0
    },
    "ignores": [
      "examples/**"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.4.2",
    "babel-plugin-import": "^1.8.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "codacy-coverage": "^3.0.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.2.0",
    "eslint-config-xo-react": "^0.17.0",
    "eslint-plugin-react": "^7.10.0",
    "get-lerna-packages": "^0.1.0",
    "husky": "^0.14.3",
    "jest": "^23.4.2",
    "lerna": "^2.11.0",
    "lint-staged": "^7.2.0",
    "react-test-renderer": "^16.7.0-alpha.2",
    "regenerator-runtime": "^0.12.0",
    "rollup": "^0.63.4",
    "rollup-plugin-babel": "^3.0.7",
    "rollup-plugin-commonjs": "^9.1.4",
    "rollup-plugin-copy-glob": "^0.2.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-uglify": "^4.0.0",
    "to-pascal-case": "^1.0.0",
    "uglify-es": "^3.3.9",
    "xo": "^0.21.1"
  }
}
